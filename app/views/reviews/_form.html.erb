<%= simple_form_for([@movie, @movie.reviews.build], html: { novalidate: false }) do |f| %>
  	<%= f.error_notification %>
	<div id="rating-form">
		<label> Rating </label>
	</div>
	<%= f.input :comments, required: true %>
	<%= f.button :submit, :class => "btn btn-custom2" %>
<% end %>

<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>